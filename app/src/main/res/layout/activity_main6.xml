<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#954C47"
    tools:context=".MainActivity6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#954C47">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="147dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/busqueda" />

            <TextView
                android:id="@+id/tvHUDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NÃºmero de HU:"
                android:textColor="#250707"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvHUDetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F4F4F4" />

            <TextView
                android:id="@+id/tvNombreDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre de la HU:"
                android:textColor="#250707"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvNombreDetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F4F4F4" />

            <TextView
                android:id="@+id/tvSolicitanteDetail"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Puesto del Solicitante:"
                android:textColor="#250707"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvSolicitanteDetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F4F4F4" />

            <TextView
                android:id="@+id/tvEstadoDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estado Actual:"
                android:textColor="#250707"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvEstadoActualDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F4F4F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFuncionalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Funcionalidad:"
                    android:textColor="#250707"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/txtDetailHU"
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:backgroundTint="#F4F4F4"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textColor="#F4F4F4"
                    android:textColorHint="#FFD6D6D6"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tvParaUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivo:"
                    android:textColor="#250707"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/txtObjetivoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:backgroundTint="#F4F4F4"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textColor="#F4F4F4"
                    android:textColorHint="#FFD6D6D6"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>